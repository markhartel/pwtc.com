<span class="term">Maps:</span>
<span class="value">
    {% for map in maps %}
        {% if map.type == "both" %}
            {{ map.title }} <a href="{{ map.file.url }}" target="_blank" download><i class="fa fa-download"></i> PDF</a> <a href="{{ map.link }}" target="_blank"><i class="fa fa-link"></i> GPS</a>
        {% elseif map.type == "link" %}
            {{ map.title }} <a href="{{ map.link }}" target="_blank"><i class="fa fa-link"></i> GPS</a>
        {% elseif map.type == "file"%}
            {{ map.title }} <a href="{{ map.file.url }}" target="_blank" download><i class="fa fa-download"></i> PDF</a>
        {% endif %}
        {% if not loop.last %},&nbsp; 
        {% endif %}
    {% endfor %}
</span>
