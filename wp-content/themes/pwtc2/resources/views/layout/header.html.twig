<header data-sticky-container>
    <div data-sticky data-options="marginTop:0;" style="width:100%">
        <!-- desktop menu -->
        <div class="row column hide-for-small-only">
            <!-- top row -->
            <div class="top clearfix">
                {% if user %}
                    <ul class="dropdown menu hide-for-small-only float-right" data-dropdown-menu data-close-on-click-inside="false">
                        <li>
                            <a href="#">
                                {{ avatar }}
                            </a>
                            <ul class="menu" id="menu-members-only">
                                {% for item in member_menu.items %}
                                    <li class="{{ item.classes|join(' ') }}">
                                        <a href="{{ item.link }}" target="{{ link.is_external ? '_blank' : '_self' }}">{{ item.title }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </li>
                    </ul>
                    <div class="float-right" style="padding-top:6px">
                {% else %}
                    <ul class="login-menu menu float-right">
                        <li><a href="{{ function('wp_login_url') }}" class="tiny primary hollow button">Login</a></li>
                    </ul>
                    <div class="float-right" style="padding-top:20px">
                {% endif %}
                    <form method="get" action="{{ site.url }}">
                        <div class="input-group">
		                    <input class="input-group-field" type="search" name="s" value="" placeholder="Enter search text..." required />
                            <div class="input-group-button">
                                    <button type="submit" class="clear button" style="border:0"><i class="fa fa-search" aria-hidden="true"></i></button>
                            </div>
	                    </div> 
	                </form>
	            </div>
            </div>
            <!-- bottom row -->
            <div class="bottom clearfix">

                <ul class="vertical menu">
                    <li><a href="{{ site.url }}" class="title float-left"><img src="/android-chrome-192x192.png" alt="" style="width: 96px;"></a></li>
                </ul>
                <ul class="dropdown menu hide-for-small-only float-right" data-dropdown-menu data-close-on-click-inside="false">
                    {% for item in primary_menu.items %}
                        <li class="{{ item.classes|join(' ') }}">
                            <a href="{{ item.link }}" target="{{ link.is_external ? '_blank' : '_self' }}">{{ item.title }}</a>
                            {% if item.children %}
                                <ul class="menu">
                                    {% for child in item.children %}
                                        <li class="{{ child.classes|join(' ') }}">
                                            <a href="{{ child.link }}" target="{{ child.is_external ? '_blank' : '_self' }}">{{ child.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <!-- mobile menu title bar -->
        <div class="title-bar hide-for-medium" data-hide-for="medium">
            <div class="title-bar-left">
                <div class="title-bar-title"><a href="{{ site.url }}"><img src="/android-chrome-192x192.png" alt="" style="width: 32px;"></a></div>
            </div>
            <div class="title-bar-right">
                {% if user %}
                    <ul class="dropdown menu float-left" data-dropdown-menu data-close-on-click-inside="false">
                        <li>
                            <a class="mobile-account-menu">
                                {{ avatar }}
                            </a>
                            <ul class="menu" id="menu-members-only">
                                {% for item in member_menu.items %}
                                    <li class="{{ item.classes|join(' ') }}">
                                        <a href="{{ item.link }}" target="{{ link.is_external ? '_blank' : '_self' }}">{{ item.title }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </li>
                    </ul>
                {% else %}
                    <a href="{{ function('wp_login_url') }}" class="tiny hollow button">Login</a>
                {% endif %}
                <span data-responsive-toggle="mobile-menu"><button class="menu-icon" type="button" data-toggle></button></span>
            </div>
        </div>
        <!-- mobile menu -->
        <div id="mobile-menu" class="hide-for-medium">
            <ul class="vertical menu" data-accordion-menu>
                {% for item in primary_menu.items %}
                    <li class="{{ item.classes|join(' ') }}">
                        <a href="{{ item.link }}" target="{{ link.is_external ? '_blank' : '_self' }}">{{ item.title }}</a>
                        {% if item.children %}
                            <ul class="menu vertical nested">
                                {% for child in item.children %}
                                    <li class="{{ child.classes|join(' ') }}">
                                        <a href="{{ child.link }}" target="{{ child.is_external ? '_blank' : '_self' }}">{{ child.title }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</header>
